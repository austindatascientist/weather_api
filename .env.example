# =============================================================================
# Weather API Environment Variables
# Copy this file to .env and update with your values
# =============================================================================

# -----------------------------------------------------------------------------
# Docker Configuration (WSL/Docker Desktop)
# -----------------------------------------------------------------------------
# Unset DOCKER_HOST to use Docker Desktop's default socket
DOCKER_HOST=

# -----------------------------------------------------------------------------
# PostgreSQL Configuration
# -----------------------------------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=weather
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# pgAdmin Configuration
# -----------------------------------------------------------------------------
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin

# -----------------------------------------------------------------------------
# Airflow Configuration
# -----------------------------------------------------------------------------
AIRFLOW_ADMIN_USER=admin
AIRFLOW_ADMIN_PASSWORD=admin
AIRFLOW_ADMIN_EMAIL=admin@example.com

# -----------------------------------------------------------------------------
# Application Configuration (Huntsville, AL coordinates)
# -----------------------------------------------------------------------------
DEFAULT_LAT=34.729847
DEFAULT_LON=-86.5859011
WEATHER_TABLE=weather_data
LOG_LEVEL=INFO
API_BASE_URL=http://localhost:8000
API_TIMEOUT=10

# -----------------------------------------------------------------------------
# Backup Configuration
# -----------------------------------------------------------------------------
BACKUP_DIR=/backups
BACKUP_RETENTION_DAYS=14
BACKUP_SCHEDULE_CRON=0 3 * * *

# -----------------------------------------------------------------------------
# User IDs (for Docker volume permissions)
# -----------------------------------------------------------------------------
APP_UID=1000
APP_GID=1000
AIRFLOW_UID=50000
